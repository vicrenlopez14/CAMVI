<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#94F3DE8A"
    card_view:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_margin="10dp">
        
        <ImageView
            android:id="@+id/CamarografoImagen"
            android:src="@drawable/usuario"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/NombreCamarografo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del camarÃ³grafo"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/btnSolicitar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#D29405"
                    android:text="Solicitar"
                    android:textStyle="bold"
                    android:textColor="#D29405"/>
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>