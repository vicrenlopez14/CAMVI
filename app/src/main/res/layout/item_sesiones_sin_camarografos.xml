<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="#F3DE8A"
    card_view:cardCornerRadius="25dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ImagenSesion"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/boda"/>

        <TextView
            android:id="@+id/TituloSesion"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Sesión fotográfica familiar"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FechaSesion"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter"
            android:text="Agendada para 23/04/2023"
            android:textColor="#6C7072"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAsignar"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FFFFFF"
            android:text="Asignar camarógrafo"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>


